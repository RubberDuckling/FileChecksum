<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <ComboBox fx:id="chooseHashFunction" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button fx:id="openButton" onAction="#openFile" text="Wybierz plik" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label fx:id="fileLabel" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Text fx:id="checksumText" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="comparedTextField" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    <Text fx:id="ifEqualText" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button fx:id="compareButton" text="Compare" onAction="#compareHash" GridPane.rowIndex="3" GridPane.columnIndex="0"/>




</GridPane>